rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regles per al logo de l'empresa
    match /app-settings/logo {
      // Permet que qualsevol pugui llegir el logo
      allow read;
      // Permet que qualsevol usuari autenticat pugui escriure (pujar/actualitzar)
      // La lògica de l'aplicació ja restringeix l'accés a aquesta funció només als administradors
      allow write: if request.auth != null;
    }

    // Regles per als adjunts de les accions
    match /actions/{actionId}/{allPaths=**} {
      // Permet la lectura d'adjunts a qualsevol usuari autenticat
      allow read: if request.auth != null;
      // Permet l'escriptura d'adjunts a qualsevol usuari autenticat
      allow write: if request.auth != null;
    }
  }
}
